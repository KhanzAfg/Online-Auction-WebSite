@model OnlineAuction.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .password-container {
        position: relative;
    }
    
    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: #6c757d;
        font-size: 16px;
        padding: 5px;
        border-radius: 3px;
    }
    
    .password-toggle:hover {
        color: #495057;
        background-color: #f8f9fa;
    }
    
    .password-field {
        padding-right: 40px;
    }
</style>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>@ViewData["Title"]</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <div class="password-container">
                    <input asp-for="Password" class="form-control password-field" type="password" />
                    <button type="button" class="password-toggle" onclick="togglePassword('Password')">
                        <span id="Password-icon">üëÅÔ∏è</span>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        
        <div class="mt-3">
            <p>Don't have an account? <a asp-action="Register">Register here</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function togglePassword(fieldId) {
            const passwordField = document.getElementById(fieldId);
            const icon = document.getElementById(fieldId + '-icon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.textContent = 'üôà';
            } else {
                passwordField.type = 'password';
                icon.textContent = 'üëÅÔ∏è';
            }
        }
        
        // Debug: Check if script is loaded
        console.log('Password toggle script loaded');
    </script>
} 